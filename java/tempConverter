//hopefully will convert farenheit to celcius and vice versa

package tempConverter;
import java.util.*;
import static java.lang.Math.*;

public class Temp {

	public static void main(String[] args) {
		//OH BOY WE'RE DOIN IT
		//variables
		Scanner kb = new Scanner(System.in);
		int menu = -1;
		double far = 1, celc = 1;
		boolean bool = false;
		
		//ask user if they want to convert to farenheit or celcius
		do{
			
			System.out.print("\nWhich tempurature converion would you like to perform?\n\n1:farenheit to celcius");
			System.out.print("\n2:celcius to farenheit\n");
		
			menu = kb.nextInt();
			
			if(menu == 1) {
				
				System.out.println("\nWhat is the tempurature in farenheit? ");
				far = kb.nextDouble();
				farToCelc(far);
				
				bool = true;
				
			} else if(menu == 2) {
				
				System.out.println("What is the tempurature in celcius? ");
				celc = kb.nextDouble();
				celcToFar(celc);
				bool = true;
				
			} else {
				System.out.println("please only enter a 0 or a 1.");
			}
			
		}while(bool != true);

	}
	
	public static void farToCelc(double f) {
		double celc = (f - 32) * (5.0/9.0);
		System.out.println(celc);
	}
	
	public static void celcToFar(double c) {
		double far = (c * (9.0/5.0)) + 32;
		System.out.println(far);
	}

}
}

