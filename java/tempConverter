		boolean bool = false;
		
		//ask user if they want to convert to farenheit or celcius
		do{System.out.print("\nWhich tempurature converion would you like to perform?\n\n0:farenheit to celcius");
		System.out.print("\n1:celcius to farenheit\n");
		
		menu = kb.nextInt();
		
		if(menu == 0) {
			farToCelc(0);
			bool = true;
		}else if(menu == 1) {
			celcToFar(0);
			bool = true;
		}else {
			System.out.println("please only enter a 0 or a 1.");
		}
		}while(bool != true);

	}
	
	public static double farToCelc(double f) {
		System.out.println("farenheit to celcius");
		return 0.0;
	}
	
	public static double celcToFar(double c) {
		System.out.println("celcius to ferenheit");
		return 0.0;
